
#Dice Function
import random
die_1 = random.randint(1,6)
die_2 = random.randint(1,6)
die_sum = die_1 + die_2
    
while True:
    print("Type 'Roll' to roll the dice.")
    roll = input()
    if roll == "Roll":
        break
#Print if statement
if int(die_1) == int(die_2):
    print("You have rolled a" + " " + str(die_1) + " " + "and a" + " " + str(die_2) + ". Doubles!")
    print("You can move forward " + str(die_sum) + " places and roll again!")
else:
    print("You have rolled a" + " " + str(die_1) + " " + "and a" + " " + str(die_2) + ".")
    print("You can move forward " + str(die_sum) + " places ")
